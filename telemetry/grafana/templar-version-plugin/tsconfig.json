{
  "compilerOptions": {
    "target": "ES2016",
    "module": "esnext",
    "lib": ["DOM", "ES2016", "es2017.object"],
    "moduleResolution": "node",
    "declaration": false,
    "rootDir": "./src",
    "baseUrl": "./src",
    "typeRoots": ["./node_modules/@types"],
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react",
    "noUnusedLocals": false,
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}